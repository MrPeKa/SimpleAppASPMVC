
@{
    ViewBag.Title = "Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/calculator.js"></script>
}

<div id="calculator" ng-controller="CalucatorController" ng-app="myApp">

    <span class="resultInCalc" ng-cloak>{{resultHistory}}{{sign}}</span>
    <span class="currentInCalc" ng-cloak>{{currentValue}}</span>
    <span class="warningInCalc" ng-cloak ng-show="showWarning">Unacceptable Operation. Please clear memory.</span>
    <form>
    <input type="button" class="buttonInCalc" ng-model="num" ng-click="onClearEnter()" value="CE" />
    <input type="button" class="buttonInCalc" ng-model="num" ng-click="onClear()" value="C" />
    <input type="button" class="buttonInCalc" ng-model="num" ng-click="onBackspace()" value="<=" />
    <input type="button" class="buttonInCalc" ng-model="num" ng-click="onSign('Divsion','/')" value="/" />


    <input type="button" class="buttonInCalc" ng-click="onDigit(7)" value="7" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(8)" value="8" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(9)" value="9" />
    <input type="button" class="buttonInCalc" ng-click="onSign('Multiplication','*')" value="*" />


    <input type="button" class="buttonInCalc" ng-click="onDigit(4)" value="4" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(5)" value="5" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(6)" value="6" />
    <input type="button" class="buttonInCalc" ng-click="onSign('Substraction','-')" value="-" />

    <input type="button" class="buttonInCalc" ng-click="onDigit(1)" value="1" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(2)" value="2" />
    <input type="button" class="buttonInCalc" ng-click="onDigit(3)" value="3" />
    <input type="button" class="buttonInCalc" ng-click="onSign('Sum','+')" value="+" />


    <input type="button" class="buttonInCalc lg-button" ng-click="onDigit(0)" value="0" />
    <input type="button" class="buttonInCalc" ng-click="onEquals()" value="=" />
        </form>
</div>

